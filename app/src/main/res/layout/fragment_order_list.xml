<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.njx.mvvmhabit.ui.common.viewmodel.OrderListViewModel" />
        <variable
            name="viewModel"
            type="OrderListViewModel" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="线体"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            />

        <com.njx.mvvmhabit.ui.widget.spinner.SpinnerViewPop
            android:id="@+id/line_type_spinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinnerpop_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_hori_padding"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/common_hori_padding"
        android:background="@color/divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="工单号"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
</layout>